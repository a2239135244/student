    <script>
        $(function () {
            $(".btnSave").on('click', function () {
                let _name = $("input[type=text]").val()
                let _sex = $('input[type=radio]:checked').val()
                let _age = $("input[type=number]").val()
                if (_age < 5 || _age > 50) {
                    alert("请输入规范年龄")
                    return
                }
                $.ajax({
                    url: "/student/addStudent",
                    type: 'put',
                    data: {
                        name: _name,
                        sex: _sex,
                        age: _age
                    }, success(res) {
                        console.log(res)
                        alert(res.msg)
                    }
                })
                console.log(_name, _age, _sex)
            })
        })
    </script>